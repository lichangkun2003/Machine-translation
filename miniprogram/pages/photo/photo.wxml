<view style="width:100%;height:500rpx;">
    <image-cropper
    id="image-cropper"
    limit_move="{{true}}"
    disable_rotate="{{true}}"
    width="{{width}}"
    height="{{height}}"
    imgSrc="{{src}}"
    bindload="cropperload"
    bindimageload="loadimage"
    bindtapcut="clickcut"
    />
</view>
<view  class='bottom'>
    <button bindtap='submit'>确定</button>
</view>

