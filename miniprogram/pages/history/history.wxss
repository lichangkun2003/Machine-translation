.history-list {
	display: flex;
	position: relative;
	flex-direction: column;
	padding: 25rpx;
}

.title {
	font-size: 26rpx;
	color: #8995a1;
	margin-bottom:25rpx;
}

.item {
	margin-bottom:10rpx;
}

.fui-card__content {
	padding:7rpx;
	margin: 7rpx;
}

.clearItem {
	width: 120rpx;
	height: 120rpx;
	border: 0;
	border-radius: 50%;
	line-height: 120rpx;
	box-shadow:0px 8rpx 30rpx #aaa;
	position: fixed;
	bottom: 20rpx;
	right: 30rpx;
}
.clearItem .icon-cha {
	line-height: 120rpx;
	width: 100%;
	height: 100%;
	font-size: 30rpx;
	color: #fff;
}
